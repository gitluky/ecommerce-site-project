<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceSiteProject</title>
    <%= render partial: 'layouts/csrf' %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': 'false' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': 'false' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-eval': 'false' %>
  </head>

  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <% if current_page?(controller: '/home', action: 'index') %>
      <div class="container-fluid">
        <div class="w-100">
          <%= image_tag('sale_banner.jpg', class: 'w-100 mb-2') %>
        </div>
      </div>
    <% end %>

    <%= render partial: 'layouts/navbar' %>


    <p class="notice text-center text-success"><%= notice %></p>
    <p class="alert text-center text-danger"><%= alert %></p>
    <div id='form-container'></div>
    <div id="main">
      <%= yield %>
    </div>

  </body>
</html>
