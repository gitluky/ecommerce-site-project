<% @product.thumbnails.each do |thumbnails|%>
    <div class="product-show-thumbnails">
      <%= image_tag url_for(thumbnails) %>
    </div>
  <% end %>


  <div class="product-details-card">
    <h3><%= @product.name %></h3>
    <p>Description: <%= @product.description %></p>
    <p>Price: <%= @product.formatted_price %></p>

    <%= simple_form_for @line_item, class: 'add-to-cart-form' do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.select(:quantity, options_for_select(0..@product.stock, :selected => 1)) %>
      <%= f.submit 'Add to Cart', data: { disable_with: false }, id: 'add_to_cart' %>
    <% end %>
  </div>
